---
import Title from "@components/common/Title.astro";
import { Counter } from "@components/Counter";
import MainLayout from "@layouts/MainLayout.astro";

const counterValue = 10;
---

<MainLayout title="Favorites">
  <Title>Islands</Title>

  <video controls="" autoplay="" transition:persist="playing-video">
    <source src="https://ia804502.us.archive.org/33/items/GoldenGa1939_3/GoldenGa1939_3_512kb.mp4" type="video/mp4">
  </video>

  <div style={{
    height: '200vh',
    background: 'blue',
    opacity: 0.5
  }}>

  </div>

  <!-- <Counter client:load/> -->
  <!-- <Counter client:idle/> -->
  <Counter
    transition:persist="GTOcounter"
    transition:persist-props
    client:visible
    initialValue={counterValue} 
  >
    <Title>Counter Islands</Title>    
  </Counter>
  <!-- <Counter client:visible={{rootMargin: "100px"}} /> -->
  <!-- <Counter client:media="(max-width: 640px)" /> -->
  <!-- <Counter client:only="solid-js" /> -->
</MainLayout>

